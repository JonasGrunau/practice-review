generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["strictUndefinedChecks"]
}

datasource db {
  provider = "sqlite"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String
}

model Review {
  id            Int      @id @default(autoincrement())
  title         String
  content       String
  rating        Int
  isRead        Boolean  @default(false)
  publishedDate DateTime
}
